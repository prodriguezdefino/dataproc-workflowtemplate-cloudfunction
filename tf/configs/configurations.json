{
  "default_cluster_config": {
    "cluster_name": "default_cluster_name",
    "config": {
        "config_bucket": "${gcs_staging_bucket}",
        "gce_cluster_config": {
            "zone_uri": "${zone}",
            "service_account_scopes": [
                "https://www.googleapis.com/auth/cloud.useraccounts.readonly",
                "https://www.googleapis.com/auth/devstorage.full_control",
                "https://www.googleapis.com/auth/logging.write"
            ]
        },
        "master_config": {
            "num_instances": 1,
            "machine_type_uri": "n1-standard-1"
        },
        "worker_config": {
            "num_instances": 2,
            "machine_type_uri": "n1-standard-1"
        },
        "software_config":{
          "properties": {
            "yarn:yarn.log-aggregation-enable": "true",
            "yarn:yarn.nodemanager.remote-app-log-dir": "gs://${gcs_logging_bucket}/request_id=/yarn/logs/",
            "yarn:yarn.log-aggregation.retain-seconds": "604800",
            "mapred:mapreduce.jobhistory.done-dir": "gs://${gcs_logging_bucket}/request_id=/done-dir/",
            "mapred:mapreduce.jobhistory.intermediate-done-dir": "gs://${gcs_logging_bucket}/request_id=/intermediate-done-dir/",
            "spark:spark.eventLog.dir": "gs://${gcs_logging_bucket}/request_id=/spark-events",
            "spark:spark.history.fs.logDirectory": "gs://${gcs_logging_bucket}/request_id=/spark-events"
          }
        },
        "initialization_actions" : [
          {
            "executable_file": "gs://${gcs_scripts_bucket}/init_actions/disable_history_server.sh"
          }
        ]
    },
    "labels": ${labels}
  }
}
